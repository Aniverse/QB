# function to install flexget
function _insfg() {

  apt-get -y install python-pip >>"${OUTTO}" 2>&1
  pip install --upgrade pip setuptools >>"${OUTTO}" 2>&1
  /usr/local/bin/pip install markdown >>"${OUTTO}" 2>&1
  /usr/local/bin/pip install flexget  >>"${OUTTO}" 2>&1
  /usr/local/bin/pip install transmissionrpc >>"${OUTTO}" 2>&1

  mkdir -p /home/${username}/.config/flexget /home/${username}/torrents/{transmission,qbittorrent,rtorrent,deluge}

  touch /home/${username}/cookies.txt
  cp -f ${local_setup}templates/flexget.config.yml.template /home/${username}/.config/flexget/config.yml
  sed -i "s/DWPORT/${DWPORT}/g" /home/${username}/.config/flexget/config.yml
  sed -i "s/SCRIPTUSERNAME/${username}/g" /home/${username}/.config/flexget/config.yml
  sed -i "s/SCRIPTPASSWORD/${passwd}/g" /home/${username}/.config/flexget/config.yml
  chmod -R 755 /home/${username}/.config/flexget /home/${username}/cookies.txt
  chown -R ${username}: /home/${username}/.config/flexget /home/${username}/cookies.txt /home/${username}/torrents/{transmission,qbittorrent,rtorrent,deluge}

  flexget web passwd $passwd  >>"${OUTTO}" 2>&1

  cp -f ${local_setup}templates/sysd/flexget.template /etc/systemd/system/flexget@.service >/dev/null 2>&1
  systemctl daemon-reload
  systemctl enable /etc/systemd/system/flexget@${username}.service >/dev/null 2>&1
  systemctl start flexget@${username} >/dev/null 2>&1
  touch /install/.flexget.lock

}





