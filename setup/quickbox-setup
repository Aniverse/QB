[[ $tram -le 2333 ]] &&  { USESWAP=Yes
echo -e "${bold}${red}Note that${normal} ${bold}Your RAM is below ${red}2333MB${jiacu}, memory may got exhausted when compiling${normal}"
echo -e "${bold}${baiqingse} 1GB Additonal swap ${normal} will be used\n" ; }

echo -e "${bold}If you want to stop, Press ${on_red}Ctrl+C${normal} ${bold}; or Press ${on_green}ENTER${normal} ${bold}to start${normal}" ; [[ ! $ForceYes == 1 ]] && read input

clear
echo
echo ""
